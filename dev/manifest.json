{
	"name": "Azure Icon Downloader",
	"version": "0.1",
	"description": "Easily find and download SVG Icons from the Microsoft Azure Portal.",
	"manifest_version": 2,
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": ["https://*.azure.com/*", "http://*.azure.com/*", "activeTab"],
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["https://*.azure.com/*", "http://*.azure.com/*"],
			"js": ["content.js"]
		}
	],
	"browser_action": {
		"default_icon": "icons/icon16.png",
		"default_popup": "popup.html"
	}
}